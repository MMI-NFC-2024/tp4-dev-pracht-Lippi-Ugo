---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Penguin simple">
  <div id="penguinplot"></div>

  <script>
    import * as Plot from "@observablehq/plot";
    import penguins from '../assets/penguins.json';

    const plot = Plot.plot({
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species"
        })
      ]
    });

    document.querySelector("#penguinplot")?.append(plot);
  </script>
</Layout>